<div class="link">
  <%= link_to 'On her way', root_path %>
</div>

<div class="links">
  <%= link_to 'Charles Durand', about_path %>, <%= link_to 'Cards', creations_path %>
</div>

<div class="cards">
  <% @creations.each do |creation|%>
        <div class="card1">
          <% creation.images.last(1).each do |photo| %>
            <%= cl_image_tag photo.key, crop: :fill %>
          <% end %>
            <div class="creations">
              <%= link_to creation.title, creation_path(creation) %>
            </div>
               <% if current_user %>
                  <div class="edit">
                    <%= link_to 'Edit', edit_creation_path(creation)  %>
                  </div>
                <% end %>
        </div>
  <% end %>
</div>



